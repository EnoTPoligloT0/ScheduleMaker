<div class="modal fade" id="updateEventModal" tabindex="-1" aria-labelledby="updateEventModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateEventModalLabel">Edit Event</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="updateEventForm" action="/ScheduleMaker/event" method="post">
                    <div class="mb-3">
                        <label for="updateEventTitle" class="form-label">Event Title</label>
                        <input type="text" class="form-control" id="updateEventTitle" name="Title" placeholder="Enter event title" required>
                    </div>
                    <div class="mb-3">
                        <label for="updateEventDescription" class="form-label">Event Description</label>
                        <textarea class="form-control" id="updateEventDescription" name="Description" rows="3" placeholder="Enter event description" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="eventStartDay" class="form-label">Event Start Day</label>
                        <input type="datetime-local" class="form-control" id="eventStartDay" name="StartTime" required>
                    </div>
                    <div class="mb-3">
                        <label for="eventEndDay" class="form-label">Event End Day</label>
                        <input type="datetime-local" class="form-control" id="eventEndDay" name="EndTime" required>
                    </div>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Edit Event</button>
                    <button type="button" class="btn btn-danger" id="deleteEventBtn">Delete Event</button>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    $('#editEventButton').click(function() {
        // Retrieve the event ID from the form's dataset attribute
        var eventId = document.getElementById('updateEventForm').dataset.eventId;

        // Now you have the event ID, you can proceed with updating the event
    });

    document.getElementById('updateEventForm').addEventListener('submit', function(event) {
        event.preventDefault();

        var xhr = new XMLHttpRequest();
        var eventId = this.dataset.eventId;
        xhr.open('PUT', '/ScheduleMaker/event/' + eventId, true); // Assuming PUT endpoint includes eventId
        xhr.setRequestHeader('Content-Type', 'application/json; charset=UTF-8');

        var eventTitle = document.getElementById('updateEventTitle').value;
        var eventDescription = document.getElementById('updateEventDescription').value;
        var eventStartTime = document.getElementById('eventStartDay').value;
        var eventEndTime = document.getElementById('eventEndDay').value;

        var data = {
            Title: eventTitle,
            Description: eventDescription,
            StartTime: eventStartTime,
            EndTime: eventEndTime
        };

        xhr.onload = function () {
            if (xhr.status == 200) {
                $('#updateEventModal').modal('hide');
                // Optionally, refresh the calendar to show updated event
                $('#calendar').fullCalendar('refetchEvents');
            } else {
                alert('Failed to update event');
            }
        };
        
        xhr.send(JSON.stringify(data));

        // Close the modal after submission
    });

    document.getElementById('deleteEventBtn').addEventListener('click', function(event) {
        $('#deleteEventButton').click(function() {
            var eventId = document.getElementById('updateEventForm').dataset.eventId;

        });
        var confirmation = confirm('Are you sure you want to delete this event?');
        if (confirmation) {
            var eventId = document.getElementById('updateEventForm').getAttribute('data-event-id');
            console.log('Event ID:', eventId); // Log the retrieved event ID
            if (eventId) {
                var xhr = new XMLHttpRequest();
                xhr.open('DELETE', '/ScheduleMaker/event/' + eventId, true);
                xhr.setRequestHeader('Content-Type', 'application/json; charset=UTF-8');

                xhr.onload = function () {
                    if (xhr.status == 204) {
                        $('#updateEventModal').modal('hide');
                        // Optionally, refresh the calendar to remove the deleted event
                        $('#calendar').fullCalendar('refetchEvents');
                    } else {
                        alert('Failed to delete event');
                    }
                };

                xhr.send();
            } else {
                alert('Event ID is not set.');
            }
        }
    });


</script>