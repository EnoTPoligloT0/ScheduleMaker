<!DOCTYPE html>
<html lang='en'>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <meta charset='utf-8'/>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'timeGridWeek',
                headerToolbar: {
                    start: 'today, prev, next',
                    center: 'title',
                    end: 'dayGridMonth, timeGridWeek, timeGridDay'
                },
                events:  {
                    url: '/ScheduleMaker/event',
                    failure: function() {
                        console.error('Error fetching events from the server');
                    },
                    // Parse fetched events and format them for FullCalendar
                    extraParams: function () {
                        return {
                            format: 'json' // Add any extra parameters needed for backend formatting
                        };
                    },
                    eventDataTransform: function(data) {
                        return {
                            title: data.title,
                            start: data.startTime,
                            end: data.endTime,
                            // Add any other properties as needed
                        };
                    }
                },
                
            });
            calendar.render();

            function getEvents() {
                $.get('/ScheduleMaker/event', function(data) {
                    var eventContainer = document.getElementById('eventContainer');
                    eventContainer.innerHTML = ''; // Clear previous events

                    data.forEach(function(event) {
                        var eventDiv = document.createElement('div');
                        eventDiv.innerHTML = '<strong>' + event.title + '</strong><br>' + event.description + '</strong><br>' + event.startTime + '</strong><br>' + event.endTime;
                        eventContainer.appendChild(eventDiv);
                    });
                });
            }

            // Attach event listener to the "Get events" button
            document.getElementById('getEventsButton').addEventListener('click', getEvents);
        });
    </script>



</head>
<body>
<div class="b-example-divider"></div>


<header class="p-3 bg-primary text-white">
    <div class="container-fluid">
        <div class="row align-items-center justify-content-between">
            <div class="col-auto text-center">
                <a href="#" class="btn btn-light btn-lg px-3 py-2 fw-bold" data-bs-toggle="modal" data-bs-target="#createEventModal">Add event</a>
            </div>
            <div class="col-auto text-center">
                <a href="#" id ="getEventsButton" class="btn btn-light btn-lg px-3 py-2 fw-bold" data-bs-toggle="modal" data-bs-target="#getEventsModal">Get events</a>
            </div>
            <div class="col-auto text-center">
                <a href="#" id ="editEventsButton" class="btn btn-light btn-lg px-3 py-2 fw-bold" data-bs-toggle="modal" data-bs-target="#editEventsModal">Edit event</a>
            </div>
            <div class="col-auto text-center">
                <a href="#" id ="deleteEventsButton" class="btn btn-light btn-lg px-3 py-2 fw-bold" data-bs-toggle="modal" data-bs-target="#editEventsModal">Delete event</a>
            </div>
            <div class="col-auto text-center">
                <h1 class="fw-bold">Schedule Maker</h1>
            </div>
            <div class="col-auto">
                <ul class="nav">
                    <li><a href="#" class="nav-link px-4 fs-5 py-3 text-white fw-bold">Calendar</a></li>
                    <li><a href="http://localhost:5083/swagger/index.html" class="nav-link px-4 fs-5 py-3 text-white fw-bold">Swagger</a></li>
                    <li><a href="#" class="nav-link px-4 fs-5 py-3 text-white fw-bold">About</a></li>
                </ul>
            </div>
            <div class="col-auto">
                <button type="button" class="btn btn-light btn-lg px-3 py-2 me-2 fw-bold" data-bs-toggle="modal" data-bs-target="#signinModal">Login</button>
                <button type="button" class="btn btn-warning btn-lg px-3 py-2 fw-bold" data-bs-toggle="modal" data-bs-target="#signupModal">Sign-up</button>
            </div>
        </div>
    </div>
</header>




@Html.Partial("getEventsModal")
@Html.Partial("registerModal")
@Html.Partial("loginModal")
@Html.Partial("createEventModalTest")






<script src="../assets/dist/js/bootstrap.bundle.min.js"></script>

<div id='calendar'></div>

@RenderBody() <!-- Render the content of the view -->

