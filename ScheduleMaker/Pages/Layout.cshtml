    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                themeSystem: 'bootstrap5',
                initialView: 'timeGridWeek',
                selectable: true,
                navLinks: true,
                timeFormat: 'H(:mm)',
                slotLabelFormat: {
                    hour: '2-digit',
                    minute: '2-digit',
                    omitZeroMinute: false,
                    hour12: false // Set to false for 24-hour format
                },
                navLinkDayClick: function(date, jsEvent) {
                    console.log('day', date.toISOString());
                    console.log('coords', jsEvent.pageX, jsEvent.pageY);
                },
                dateClick: function(info) {
                    alert('Clicked on: ' + info.dateStr);
                    
                },
                eventClick: function(info) {
                    var eventId = info.event.id;
                    console.log('Event ID:', eventId);
                    
                    document.getElementById('updateEventTitle').value = info.event.title;
                    document.getElementById('updateEventDescription').value = info.event.extendedProps.description;
                    document.getElementById('eventStartDay').value = info.event.start.toISOString().slice(0, 16); // Set value for datetime-local
                    document.getElementById('eventEndDay').value = info.event.end ? info.event.end.toISOString().slice(0, 16) : ''; // Check for null end time

                    // Save the event ID to the form's dataset for later use in submission
;
                    document.getElementById('updateEventForm').setAttribute('data-event-id', eventId);

                    // Show the updateEventModal
                    $('#updateEventModal').modal('show');
                    
                    
                },

                headerToolbar: {
                    start: 'today,prev,next',
                    center: 'title',
                    end: 'dayGridMonth,timeGridWeek,timeGridDay,listWeek'
                },
                events:  {
                    url: '/ScheduleMaker/event',
                    extraParams: 
                    {
                        format: 'json' 
                    },
                    eventDataTransform: function(data) {
                        return {
                            id: data.id,
                            title: data.title,
                            start: data.startTime,
                            end: data.endTime,
                        };
                    }
                },
                
            });
            calendar.render();

           

            // Attach event listener to the "Get events" button
        });
    </script>
    
</head>
