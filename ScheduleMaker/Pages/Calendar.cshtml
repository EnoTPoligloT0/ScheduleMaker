@page
@model List<ScheduleMaker.Models.Event>

<!DOCTYPE html>
<html lang='en'>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <meta charset='utf-8'/>
</head>
<body>

<div id='calendar'>
    <!-- Render events here using Razor syntax -->
    @foreach (var eventModel in Model)
    {
        <div>
            <strong>@eventModel.Title</strong><br />
            @eventModel.Description<br />
            @eventModel.StartTime.ToString("yyyy-MM-ddTHH:mm:ss")<br />
            @eventModel.EndTime.ToString("yyyy-MM-ddTHH:mm:ss")
        </div>
    }
</div>

</body>
</html>